<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginTop="88dp"
        android:text="Login"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <ImageView
        android:id="@+id/imageTK"
        android:layout_width="45dp"
        android:layout_height="44dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_email_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"></ImageView>

    <EditText
        android:id="@+id/txtTaiKhoan"
        android:layout_width="180dp"
        android:layout_height="52dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:hint="@string/taikhoan"
        app:layout_constraintStart_toEndOf="@+id/imageTK"
        app:layout_constraintTop_toBottomOf="@+id/textView">

    </EditText>
    <ImageView
        android:id="@+id/imageMk"
        android:layout_width="45dp"
        android:layout_height="44dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_lock_outline_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageTK"></ImageView>
    <EditText
        android:id="@+id/txtMatKhau"
        android:layout_width="180dp"
        android:layout_height="52dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:hint="@string/matkhau"
        app:layout_constraintStart_toEndOf="@+id/imageTK"
        app:layout_constraintTop_toBottomOf="@+id/txtTaiKhoan">

    </EditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="28dp"
        android:text="Đăng nhập"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMatKhau"></Button>


</androidx.constraintlayout.widget.ConstraintLayout>